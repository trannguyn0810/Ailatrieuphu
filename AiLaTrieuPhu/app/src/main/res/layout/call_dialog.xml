<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="#38383b">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/rl_calls"
        android:background="@drawable/player_layout_help_call_audience_background"
        android:layout_width="350dp"
        android:layout_height="300dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/ln_answer"
            android:visibility="gone"
            android:layout_centerHorizontal="true"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center_horizontal"
            android:orientation="vertical"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent">

            <TextView
                android:id="@+id/tv_answer"
                android:paddingTop="16dp"
                android:paddingBottom="32dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Theo tôi đáp án đúng là A"
                android:textStyle="bold"
                android:textSize="16sp"
                android:textColor="#ffbe1c"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                android:layout_marginTop="30dp"/>

            <Button
                android:id="@+id/btn_close"
                android:layout_width="102dp"
                android:layout_height="28dp"
                android:text="Đóng"
                android:textColor="#ffffff"
                android:textAllCaps="false"
                android:background="@drawable/dialog_confirm_background_button"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toRightOf="parent"
                android:layout_marginTop="220dp"/>

        </androidx.constraintlayout.widget.ConstraintLayout>

        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/ln_call_01"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toLeftOf="@id/ln_call_02"
            android:layout_marginTop="65dp"
            android:layout_marginLeft="55dp"
            tools:ignore="MissingConstraints">

            <ImageButton
                android:background="@drawable/btn_help_call_01"
                android:id="@+id/btn_help_01"
                android:layout_width="72dp"
                android:layout_height="72dp"
                android:contentDescription="Bs"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Bác sĩ"
                android:textColor="#ffffff"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintTop_toBottomOf="@id/btn_help_01"/>

        </androidx.constraintlayout.widget.ConstraintLayout>

        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/ln_call_02"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintLeft_toRightOf="@id/ln_call_01"
            android:layout_marginTop="65dp"
            android:layout_marginLeft="95dp"
            tools:ignore="MissingConstraints">

            <ImageButton
                android:layout_width="72dp"
                android:layout_height="72dp"
                android:background="@drawable/btn_help_call_02"
                android:id="@+id/btn_help_02"
                android:contentDescription="Gs"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Giáo sư"
                android:textColor="#ffffff"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintTop_toBottomOf="@id/btn_help_02"/>
        </androidx.constraintlayout.widget.ConstraintLayout>

        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/ln_call_03"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toBottomOf="@id/ln_call_01"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toLeftOf="@id/ln_call_04"
            android:layout_marginTop="45dp"
            android:layout_marginLeft="55dp"
            tools:ignore="MissingConstraints">

            <ImageButton
                android:background="@drawable/btn_help_call_03"
                android:id="@+id/btn_help_03"
                android:layout_width="72dp"
                android:layout_height="72dp"
                android:contentDescription="Ks"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Kĩ sư"
                android:textColor="#ffffff"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintTop_toBottomOf="@id/btn_help_03"/>

        </androidx.constraintlayout.widget.ConstraintLayout>

        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/ln_call_04"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toBottomOf="@id/ln_call_02"
            app:layout_constraintLeft_toRightOf="@id/ln_call_03"
            android:layout_marginTop="45dp"
            android:layout_marginLeft="95dp"
            tools:ignore="MissingConstraints">

            <ImageButton
                android:layout_width="72dp"
                android:layout_height="72dp"
                android:background="@drawable/btn_help_call_04"
                android:id="@+id/btn_help_04"
                android:contentDescription="Pv"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Phóng viên"
                android:textColor="#ffffff"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintTop_toBottomOf="@id/btn_help_04"/>
        </androidx.constraintlayout.widget.ConstraintLayout>

    </androidx.constraintlayout.widget.ConstraintLayout>

    <TextView
        android:id="@+id/textViewFeedback"
        android:layout_width="172dp"
        android:layout_height="50dp"
        android:background="@drawable/player_layout_help_call_title_background"
        android:gravity="center"
        android:text="Ý kiến chuyên gia"
        android:textColor="#000000"
        android:textStyle="bold"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginTop="243dp"/>

</androidx.constraintlayout.widget.ConstraintLayout>