<?xml version="1.0" encoding="utf-8"?>
<com.bkacad.nnt.ailatrieuphu.layout.MoneyLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/layout_money"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:clickable="false"
    android:background="@drawable/player_money_background">

    <Button
        android:id="@+id/btn_hide"
        android:layout_width="100dp"
        android:layout_height="50dp"
        android:background="@drawable/btn_hide_bg"
        android:text="Hide"
        android:textColor="#ffffff"
        android:layout_marginTop="680dp"
        android:layout_marginLeft="300dp"/>

